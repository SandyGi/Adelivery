<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/txtSNO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="1"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"/>
        <TextView
                android:id="@+id/txtOrderMobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtSNO"
                app:layout_constraintEnd_toStartOf="@id/txtOrderStatus"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:layout_marginStart="20dp"
                android:text="number"
                app:layout_constraintStart_toStartOf="parent">

        </TextView>

        <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"/>

        <View android:layout_width="match_parent"
              android:background="@color/colorAccent"
              android:layout_height="1dp"
              app:layout_constraintTop_toBottomOf="@+id/txtOrderStatus"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
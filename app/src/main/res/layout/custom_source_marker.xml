<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_marker_view"
    android:layout_width="90dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_pinmarker"
        android:layout_width="@dimen/pin_marker_width"
        android:layout_height="@dimen/pin_marker_height"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:src="@drawable/pickuppin" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_top"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="@dimen/map_dot_left_margin"
        android:layout_below="@+id/iv_pinmarker"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pickup_map_dot" />


</RelativeLayout>